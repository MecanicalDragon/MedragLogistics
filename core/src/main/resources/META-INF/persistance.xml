<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="
             http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="medrag_logistics_db" transaction-type="RESOURCE_LOCAL">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>net.medrag.domain.entity.City</class>
        <class>net.medrag.domain.entity.Driver</class>
        <class>net.medrag.domain.entity.Truck</class>
        <class>net.medrag.domain.entity.Cargo</class>
        <class>net.medrag.domain.entity.User</class>
        <class>net.medrag.domain.entity.Customer</class>
        <class>net.medrag.domain.entity.Orderr</class>
        <class>net.medrag.domain.entity.Waypoint</class>

    </persistence-unit>
</persistence>